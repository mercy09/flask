
services:
  - type: web
    name: sales-company-app
    env: python
    runtime: python
    pythonVersion: 3.10.13
    buildCommand: pip install -r requirements.txt
    startCommand: gunicorn app:app
    plan: free
    envVars:
      - key: FLASK_ENV
        value: production
      - key: SECRET_KEY
        generateValue: true
      - key: DATABASE_URL
        fromDatabase:
          name: sales-db
          property: connectionString
    healthCheckPath: /

databases:
  - name: sales-db
    databaseName: sales_company
    user: sales_user
    plan: free
